// Place your settings in this file to overwrite default and user settings.
{
    "markdownlint.config": {
        "default": true,
        "MD002": false,
        "MD041": false,
        "MD007": {
            "indent": 4
        }
    },
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "todohighlight.include": "**/*.md",
    "todohighlight.keywords": [

        {
            "text": "TODO:",
            "color": "white",
            "backgroundColor": "darkkhaki"
        }
    ],
    "todo.embedded.providers.ag.regex": "(TODO|FIXME|FIX|BUG|UGLY|HACK|NOTE|IDEA|REVIEW|DEBUG|OPTIMIZE)",
    "todo.embedded.providers.rg.regex": "(TODO|FIXME|FIX|BUG|UGLY|HACK|NOTE|IDEA|REVIEW|DEBUG|OPTIMIZE)",
    "todo.embedded.regex": "*(TODO|FIXME|FIX|BUG|UGLY|HACK|NOTE|IDEA|REVIEW|DEBUG|OPTIMIZE):.*",
    "prettier.proseWrap": "always"
}